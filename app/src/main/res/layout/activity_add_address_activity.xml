<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.AddAddressActivity">

    <include
        android:id="@+id/tooolbar"
        layout="@layout/toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tooolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/topMargin"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="Phone no"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Mobile number"
                android:inputType="number"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="Postcode"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Postcode"
                android:inputType="number"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="Town/City"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtTown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Town/City"
                android:inputType="text"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="State"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="State"
                android:inputType="text"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="Address"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Flat,House no,Building,Company"
                android:inputType="text"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/topMargin"
                android:text="Landmark"
                android:textColor="@color/gray"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Landmark e.g. near apollo hospital"
                android:inputType="text"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/topMargin"
                android:background="#F1C558"
                android:text="Add Address"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>